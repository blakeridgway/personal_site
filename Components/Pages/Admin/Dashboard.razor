@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using PersonalSite.Models
@using PersonalSite.Services
@attribute [Authorize]
@rendermode InteractiveServer
@inject IBlogService BlogService
@inject ITrafficService TrafficService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Admin Dashboard | Blake Ridgway</PageTitle>

<div class="container-lg py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="h2 mb-1">
                <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard
            </h1>
            <p class="text-muted mb-0">Manage your site content and view analytics</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/admin/traffic" class="btn btn-outline-primary">
                <i class="bi bi-graph-up me-2"></i>Analytics
            </a>
            <a href="/admin/logout" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card-glass rounded-3 p-4">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-eye fs-4 text-primary"></i>
                    </div>
                    <div>
                        <div class="h4 mb-0">@_stats.TotalPageViews</div>
                        <div class="text-muted small">Page Views (30d)</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-glass rounded-3 p-4">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-people fs-4 text-success"></i>
                    </div>
                    <div>
                        <div class="h4 mb-0">@_stats.UniqueVisitors</div>
                        <div class="text-muted small">Unique Visitors</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-glass rounded-3 p-4">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-journal-text fs-4 text-info"></i>
                    </div>
                    <div>
                        <div class="h4 mb-0">@_posts.Count()</div>
                        <div class="text-muted small">Blog Posts</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-glass rounded-3 p-4">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-lightning fs-4 text-warning"></i>
                    </div>
                    <div>
                        <div class="h4 mb-0">@_stats.AvgResponseTime ms</div>
                        <div class="text-muted small">Avg Response</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Blog Posts -->
        <div class="col-lg-8">
            <div class="card-glass rounded-4 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-journal-text text-info me-2"></i>Blog Posts
                    </h2>
                    <div class="d-flex gap-2 align-items-center">
                        <span class="badge bg-primary">@_posts.Count() posts</span>
                        <a href="/admin/blog/new" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>New Post
                        </a>
                    </div>
                </div>

                @if (_posts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Date</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in _posts.Take(10))
                                {
                                    <tr>
                                        <td>
                                            <a href="/blog/@post.Slug" class="text-light text-decoration-none">
                                                @post.Title
                                            </a>
                                        </td>
                                        <td><span class="badge-stack">@post.Category</span></td>
                                        <td class="text-muted">@post.PublishedDate.ToString("MMM d, yyyy")</td>
                                        <td class="text-end">
                                            <div class="d-flex gap-1 justify-content-end">
                                                <a href="/blog/@post.Slug" class="btn btn-sm btn-outline-primary" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/admin/blog/edit/@post.Slug" class="btn btn-sm btn-outline-info" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" title="Delete" @onclick="() => DeletePost(post.Slug)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-journal-x fs-1 text-muted mb-3"></i>
                        <p class="text-muted">No blog posts yet</p>
                        <a href="/admin/blog/new" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Create Your First Post
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4">
            <div class="card-glass rounded-4 p-4">
                <h2 class="h5 mb-4">
                    <i class="bi bi-activity text-success me-2"></i>Recent Visits
                </h2>

                @if (_recentViews.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var view in _recentViews.Take(10))
                        {
                            <div class="list-group-item bg-transparent border-dark-subtle px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-medium text-truncate" style="max-width: 200px;">@view.Path</div>
                                        <small class="text-muted">@view.IpAddress</small>
                                    </div>
                                    <small class="text-muted">@GetTimeAgo(view.Timestamp)</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No recent visits</p>
                }

                <div class="mt-3">
                    <a href="/admin/traffic" class="btn btn-outline-primary btn-sm w-100">
                        View All Analytics <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IEnumerable<BlogPost> _posts = Enumerable.Empty<BlogPost>();
    private TrafficStats _stats = new();
    private IEnumerable<PageView> _recentViews = Enumerable.Empty<PageView>();

    protected override async Task OnInitializedAsync()
    {
        _posts = await BlogService.GetAllPostsAsync();
        _stats = await TrafficService.GetStatsAsync(30);
        _recentViews = await TrafficService.GetRecentPageViewsAsync(10);
    }

    private async Task DeletePost(string slug)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this post?");
        if (confirmed)
        {
            await BlogService.DeletePostAsync(slug);
            _posts = await BlogService.GetAllPostsAsync();
        }
    }

    private string GetTimeAgo(DateTime timestamp)
    {
        var diff = DateTime.UtcNow - timestamp;

        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return $"{(int)diff.TotalDays}d ago";
    }
}
